<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dialog_chooser_function"
        android:elevation="10dp"
        android:background="@drawable/custom_border_view_function_img_product"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dimen_30dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Điều chỉnh thời gian"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_19dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginVertical="@dimen/dimen_5dp"/>
            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="@dimen/dimen_27dp"
                android:layout_height="@dimen/dimen_27dp"
                android:src="@drawable/ic_check_type"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_70"
            />

        <LinearLayout
            android:id="@+id/layoutChooserTimeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Ngày bắt đầu"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:textSize="@dimen/dimen_18dp"
                android:fontFamily="@font/poppins_medium"
               />
            <TextView
                android:id="@+id/tvTimeStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:visibility="gone"
                android:text="22/11/2022"
                android:textColor="@color/grey_150"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:textSize="@dimen/dimen_16dp"
                android:fontFamily="@font/poppins_regular"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_70"
            android:layout_marginVertical="@dimen/dimen_8dp"
            />
        <LinearLayout
            android:id="@+id/layoutChooserTimeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="@dimen/dimen_10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"

                android:text="Ngày kết thúc"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:textSize="@dimen/dimen_18dp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/tvTimeEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:text="22/11/2022"
                android:textColor="@color/grey_150"
                android:textSize="@dimen/dimen_16dp"
                android:visibility="gone" />
        </LinearLayout>



    </LinearLayout>



</LinearLayout>