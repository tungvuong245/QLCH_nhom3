<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleTvLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_25dp</item>
        <item name="android:textColor">@color/brown_120</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/leoscar_serif</item>
    </style>

    <style name="styleEditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text_login</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingVertical">@dimen/dimen_13dp</item>
        <item name="android:paddingEnd">@dimen/dimen_5dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_hint_icon_brown</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:textSize">@dimen/dimen_18dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="styleTilEditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text_login</item>
        <item name="android:layout_marginTop">@dimen/dimen_18dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="android:elevation">@dimen/dimen_8dp</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/brown_500</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">30%</item>
        <item name="cornerFamily">cut</item>
    </style>
    <style name="FabShapeStyle2" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>


</resources>